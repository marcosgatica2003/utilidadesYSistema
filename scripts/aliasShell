alias cambiarTema='$HOME/.config/utilidadesYSistema/scripts/cambiarTema.sh'
alias clima="curl wttr.in/CÃ³rdoba_Argentina"
alias vimrc="vim ~/.vimrc"
alias descargarYT="python3 $HOME/.config/utilidadesYSistema/scripts/codigosPython/descargarYT.py"
