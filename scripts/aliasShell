alias cls="cd $HOME >/dev/null && clear"
alias clima="curl wttr.in/CÃ³rdoba_Argentina"
alias vimrc="vim ~/.vim/vimrc"
alias templateLaTeX="cp -r $HOME/.vim/templates/templateLaTeX ."
alias cd..2='cd ../../'
alias cd..3='cd ../../../'

if command -v /usr/bin/lsd >/dev/null 2>&1; then
    alias ll='/usr/bin/lsd -l'
    alias la='/usr/bin/lsd -a'
    alias l='/usr/bin/lsd -cf'
    alias ls='/usr/bin/lsd -h --group-directories-first'
else
    alias ll='ls -l --block-size=MB'
    alias la='ls -a'
    alias l='ls -cf'
    alias ls='ls --color=auto -h --group-directories-first'
fi
cd() {
    builtin cd "$@"
     ls --color=auto
}

addAndPush() {
  git add .
  git commit -m "$1"
  git push
}

alias copiar='xclip -selection clipboard'
alias gstatus='git status'
alias gcommit='git commit -m'
