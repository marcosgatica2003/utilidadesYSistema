if [[ -z $DISPLAY && $XDG_VTNR -eq 1 && $(tty) == /dev/tty1 ]]; then
    if [ -f /home/marcosgatica/.zshrc ]; then
        source /home/marcosgatica/.zshrc
    fi
    export PATH=$PATH:/usr/local/go/bin
    export PATH=$PATH:/home/marcosgatica/.local/bin
    export PATH=$PATH:/sbin
    export XDG_DATA_DIRS="/var/lib/flatpak/exports/share:$HOME/.local/share/flatpak/exports/share:${XDG_DATA_DIRS:-/usr/local/share:/usr/share}"

    /bin/startx &> /dev/null
fi
