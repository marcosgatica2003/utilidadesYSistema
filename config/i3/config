set $mod Mod4

font pango:monospace bold 9

floating_modifier $mod

bindsym $mod+Return exec /usr/local/bin/st -e /bin/tmux

bindsym $mod+Shift+q kill
bindsym $mod+b bar mode toggle
bindsym $mod+d exec /usr/local/bin/dmenu_run
bindsym $mod+t exec $HOME/.config/rofi/temperaturas.sh
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+c exec /home/marcosgatica/Repositorios/gaticonTools/capturadorDePantallas/gaticonCaptureX11.sh
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle


set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

mode "resize" {

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

gaps inner 6
gaps outer 6

bindsym $mod+r mode "resize"
#                       border  background text  indicator
client.focused          #cc241d #000000 #ebdbb2 #000000
client.focused_inactive #000000 #000000 #a89984 #000000
client.unfocused        #000000 #000000 #a89984 #000000
client.urgent           #d79921 #000000 #000000 #d79921
client.placeholder      #cc241d #000000 #000000 #cc241d

exec --no-startup-id /bin/i3blocks
exec --no-startup-id /bin/dunst
exec --no-startup-id /bin/brightnessctl set 40%
exec --no-startup-id /bin/xset -dpms s off
new_window normal

for_window [class="^mpv$"] floating enable
for_window [class="^feh$"] floating enable
for_window [class="^MPlayer$"] floating enable pixel 3
for_window [class="^matplotlib$"] floating enable
for_window [class="^.*"] border normal 1

bar {
        status_command i3blocks
        tray_padding 4
        modifier none
        font pango:CaskaydiaCove Nerd Font Bold 9
        position top
        hidden_state hide
        mode hide
        colors {
            background #000000
            statusline #ebdbb2
            separator  #000000

            #                  border      background   text
            focused_workspace  #cc241d     #000000      #ebdbb2
            active_workspace   #000000     #000000      #a89984
            inactive_workspace #000000     #000000      #7c6f64
            urgent_workspace   #d79921     #000000      #000000
            binding_mode       #cc241d     #000000      #ebdbb2
    }

}
