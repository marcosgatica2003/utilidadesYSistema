#
# wm independent hotkeys
#
super + shift + space
    bspc node -t tiled

super + space
    bspc node -t floating

# terminal emulator
super + Return
	st -e tmux

# program launcher
super + d
	dmenu_run

super + t
    /home/marcosgatica/.config/rofi/temperaturas.sh

# close and kill
super + shift + q
	bspc node -c

# Capturar pantalla
super + Tab
    /home/marcosgatica/Repositorios/gaticonTools/capturadorDePantallas/gaticonCaptureX11.sh

# Cambiar foco
super + alt + {Left,Down,Up,Right}
    bspc node -f {west,south,north,east}

# alternate between the tiled and monocle layout
super + w
	bspc desktop -l next

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Redimensionar ventanas flotantes
super + {Left,Down,Up,Right}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Redimensionar en direcci√≥n opuesta
super + shift + {Left,Down,Up,Right}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
